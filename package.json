    "eslint-plugin-react-hooks": "^2.1.2",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "ts-node": "^8.6.2",
    "typescript": "^3.8.3",
    "typescript-json-schema": "^0.42.0"
  }
